<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>

<!--
The GUI for ABACUS is defined as below. There are two primary sections, the
menu bar which is how the user will do everything (opening folders, showing
certain screens), and the screen which displays the analysis of the source
folder.
-->
<?import javafx.scene.text.Text?>
<BorderPane fx:id="root"
            fx:controller="com.aidanogrady.abacus.controller.Controller"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="720"
            prefWidth="1280">
    <top>
        <MenuBar fx:id="menubar">
            <Menu text="File">
                <MenuItem text="Open Folder" onAction="#open"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit" onAction="#exit"/>
            </Menu>
            <Menu text="View">
                <MenuItem text="Large Classes"
                          onAction="#displayLargeClasses"/>
                <MenuItem text="Large Methods"
                          onAction="#displayLargeMethods"/>
                <MenuItem text="Long Parameter Lists"
                          onAction="#displayLongParamLists"/>
                <MenuItem text="Primitive Obsession"
                          onAction="#displayPrimitiveObsession"/>
                <MenuItem text="Data Clumps"
                          onAction="#displayDataClumps"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#about"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <Text fx:id="display"/>
    </center>
    <bottom>
        <Text fx:id="folderPath"/>
    </bottom>
</BorderPane>
